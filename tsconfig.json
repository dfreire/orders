{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./atom-typescript-out/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react"
    },
    "filesGlob": [
        "typings/browser.d.ts",
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*.ts",
        "!node_modules/**"
    ],
    "files": [
        "typings/browser.d.ts",
        "src/actions.ts",
        "src/add-to-shopping-basket.ts",
        "src/api.ts",
        "src/index.ts",
        "src/model.ts",
        "src/reducers.ts",
        "src/remove-from-shopping-basket.ts",
        "src/set-order-billing-address.ts",
        "src/set-order-shipping-address.ts",
        "src/state.ts",
        "test/index_test.ts",
        "test/test-data.ts"
    ],
    "atom": {
        "rewriteTsconfig": true,
        "formatOnSave": true
    }
}
