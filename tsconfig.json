{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./atom-typescript-out/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react"
    },
    "filesGlob": [
        "typings/browser.d.ts",
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*.ts",
        "!node_modules/**"
    ],
    "files": [
        "typings/browser.d.ts",
        "src/app.ts",
        "src/checkout/set-order-billing-address.ts",
        "src/checkout/set-order-shipping-address.ts",
        "src/index.ts",
        "src/model.ts",
        "src/shopping-basket/add-to-shopping-basket.ts",
        "src/shopping-basket/increment-in-shopping-basket.ts",
        "src/shopping-basket/remove-from-shopping-basket.ts",
        "src/types.ts",
        "src/user/address/create-address.ts",
        "src/user/address/remove-address.ts",
        "src/user/address/update-address.ts",
        "src/user/auth/reset-password.ts",
        "src/user/auth/sign-in.ts",
        "src/user/auth/sign-out.ts",
        "src/user/profile/change-email.ts",
        "src/user/profile/change-password.ts",
        "test/index_test.ts",
        "test/test-data.ts"
    ],
    "atom": {
        "rewriteTsconfig": true,
        "formatOnSave": true
    }
}
