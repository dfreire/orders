{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./atom-typescript-out/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react"
    },
    "filesGlob": [
        "typings/browser.d.ts",
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*.ts",
        "!node_modules/**"
    ],
    "files": [
        "typings/browser.d.ts",
        "src/index.ts",
        "src/model.ts",
        "src/state.ts",
        "test/index_test.ts",
        "test/test-data.ts"
    ],
    "atom": {
        "rewriteTsconfig": true,
        "formatOnSave": true
    }
}
