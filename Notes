Product(name)
	Variant(name, weight, compatiblePackages, sku, availableQuantity, vatRates)
		BasePrice(value, shippingRegions)
		PromoPrice(value, shippingRegions)

VatRate(name, value, shippingRegions)

Country(name)
	ShippingRegion(name)

ShippingRate(stragety[ lowest | highest ], flatValue, shippingRegions)
	ByWeight(fromWeight, toWeight, value)
	ByTotalPrice(fromTotalPrice, toTotalPrice, value)

Customer(name, email, password)
	Address(
		fullName, streetLine1, streetLine2, streetLine3, postalCode, townOrCity, country
		isBillingAddress, isDefaultBillingAddress, vatNumber, companyName,
		isShippingAddress, isDefaultShippingAddress, shippingRegion, phoneNumber
	)

ShoppingCart(customerEmail)
	ShoppingCartItem(variantId, quantity)

Order(status, date, customerId, copyOfShippingAddress, copyOfBillingAddress)
	OrderPackage(copyOfShippingRate)
		OrderPackageItem(
			producId, productName,
			variantId, variantName, variantWeight, variantSKU,
			quantity, basePrice, promoPrice, copyOfVatRate
		)

checkout(shoppingCart) order
